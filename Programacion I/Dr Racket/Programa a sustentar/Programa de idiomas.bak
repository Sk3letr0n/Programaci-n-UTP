    ((= op 12)(Salir))
    (else (idioma 1)))
  )

(define (interfazesp op)
  (menuesp)
  (newline)
  (display "Opcion: ")
  (set! op (read))
  (cond
    ((= op 1)(sumar (read)(read)))
    ((= op 2)(restar (read)(read)))
    ((= op 3)(multiplicar (read)(read)))
    ((= op 4)(dividir (read)(read)))
    ((= op 5)(display "Cambiar idioma")) ;OJO OJO OJO OJO OJO OJO OJO OJO
    ((= op 6)(Salir))
    (else (interfazesp 1)))
  )

